<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="chatRoom"
            type="com.rn1.gogoyo.model.Chatroom" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/chatRoomFriendIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{chatRoom.friend.image}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chatRoomFriendNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="@{chatRoom.friend.name}"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/chatRoomFriendIv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chatRoomLastMsgTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxWidth="150dp"
            android:text="@{chatRoom.lastMsg}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/chatRoomFriendNameTv"
            app:layout_constraintTop_toBottomOf="@+id/chatRoomFriendNameTv" />

        <TextView
            android:id="@+id/chatRoomLastMsgTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/chatRoomLastMsgTv"
            app:layout_constraintStart_toEndOf="@+id/chatRoomLastMsgTv"
            app:layout_constraintTop_toTopOf="@+id/chatRoomLastMsgTv"
            app:layout_constraintVertical_bias="0.0"
            app:timeToDisplayFormat="@{chatRoom.msgTime}"
            tools:text="12月1日 01:36" />

        <!--        <TextView-->
        <!--            android:id="@+id/isReadTv"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:layout_marginEnd="16dp"-->
        <!--            android:text="已讀"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
